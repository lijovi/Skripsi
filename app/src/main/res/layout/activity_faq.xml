<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FAQ"
    android:orientation="vertical"
    android:background="#DDE6ED">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@drawable/back_hitam"
            android:layout_marginLeft="15dp"
            android:id="@+id/btnBack"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="FREQUENTLY ASKED QUESTIONS"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="25dp"
            android:padding="20dp"
            android:layout_marginRight="15dp"
            />

    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_marginHorizontal="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#9DB2BF"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bagaimana mencari rumah sakit rekanan melalui aplikasi ?"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:paddingHorizontal="5dp"
                        android:layout_gravity="center"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/plus_hitam"
                        android:layout_gravity="center"
                        android:id="@+id/plus1"
                        />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daftar rumah sakit rekanan dapat ditemukan pada menu utama"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:paddingBottom="5dp"
                    android:paddingHorizontal="5dp"
                    android:id="@+id/q1"
                    android:visibility="gone"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#9DB2BF"
                android:layout_marginTop="20dp"
                android:gravity="center"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bagaimana cara melihat detail polis saya di aplikasi ?"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:paddingHorizontal="5dp"
                        android:layout_gravity="center"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/plus_hitam"
                        android:layout_gravity="center"
                        android:id="@+id/plus2"
                        />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pengguna dapat membuka halaman Informasi Asuransi dengan menginput password terlebih dahulu"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:paddingBottom="5dp"
                    android:paddingHorizontal="5dp"
                    android:id="@+id/q2"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#9DB2BF"
                android:layout_marginTop="20dp"
                android:gravity="center"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apa yang harus dilakukan jika lupa password ?"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:paddingHorizontal="5dp"
                        android:layout_gravity="center"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/plus_hitam"
                        android:layout_gravity="center"
                        android:id="@+id/plus3"
                        />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='Pengguna dapat melakukan perubahan password melalui dua cara:  \n- Klik tombol "Lupa password" di halaman login \n- Klik "Ubah password" di halaman profile'
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:paddingBottom="5dp"
                    android:paddingHorizontal="5dp"
                    android:id="@+id/q3"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#9DB2BF"
                android:layout_marginTop="20dp"
                android:gravity="center"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apa yang dimaksud dengan limit asuransi ?"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:paddingHorizontal="5dp"
                        android:layout_gravity="center"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/plus_hitam"
                        android:layout_gravity="center"
                        android:id="@+id/plus4"
                        />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='Limit asuransi adalah batas maksimal biaya yang ditanggung oleh perusahaan asuransi sesuai dengan ketentuan pada polis'
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:paddingBottom="5dp"
                    android:paddingHorizontal="5dp"
                    android:id="@+id/q4"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#9DB2BF"
                android:layout_marginTop="20dp"
                android:gravity="center"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apakah saya bisa mengajukan perubahan data polis melalu aplikasi ?"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:paddingHorizontal="5dp"
                        android:layout_gravity="center"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/plus_hitam"
                        android:layout_gravity="center"
                        android:id="@+id/plus5"
                        />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='Perubahan data polis di aplikasi perlu diajukan langsung ke pihak asuransi. Pengguna dapat menghubungi pihak asuransi melalui nomor telepon kontak yang tersedia di aplikasi'
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:paddingBottom="5dp"
                    android:paddingHorizontal="5dp"
                    android:id="@+id/q5"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#9DB2BF"
                android:layout_marginTop="20dp"
                android:gravity="center"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bagaimana cara mengajukan klaim melalui aplikasi ?"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:paddingHorizontal="5dp"
                        android:layout_gravity="center"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/plus_hitam"
                        android:layout_gravity="center"
                        android:id="@+id/plus6"
                        />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='Pengajuan klaim dapat dilakukan pengguna dengan menghubungi pihak asuransi melalui kontak yang tersedia di aplikasi'
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:paddingBottom="5dp"
                    android:paddingHorizontal="5dp"
                    android:id="@+id/q6"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#9DB2BF"
                android:layout_marginTop="20dp"
                android:gravity="center"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bagaimana cara membayar premi asuransi melalui aplikasi ?"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:paddingHorizontal="5dp"
                        android:layout_gravity="center"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/plus_hitam"
                        android:layout_gravity="center"
                        android:id="@+id/plus7"
                        />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='Pengguna dapat melakukan pembayaran premi asuransi dengan mengklik tombol "Bayar Premi" pada halaman utama ataupun mengklik notifikasi reminder pembayaran premi'
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:paddingBottom="5dp"
                    android:paddingHorizontal="5dp"
                    android:id="@+id/q7"
                    android:visibility="gone"
                    />

            </LinearLayout>


        </LinearLayout>





    </ScrollView>

  </LinearLayout>