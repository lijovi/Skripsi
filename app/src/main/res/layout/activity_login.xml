<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:orientation="vertical"
    android:background="#27374D"
    android:gravity="center">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corner_background"
        android:paddingHorizontal="20dp"
        android:paddingVertical="25dp"
        android:gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MASUK"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginVertical="10dp"
            android:paddingBottom="20dp"
            android:textColor="@color/black"
            />

<!--    NIK -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NIK"
            android:paddingVertical="8dp"
            android:textColor="@color/black"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/rounded_corner_fill"
            android:id="@+id/nik"
            android:hint="Input NIK"
            android:textSize="12dp"
            android:paddingLeft="8dp"
            />

<!--    Nama -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:paddingVertical="8dp"
            android:textColor="@color/black"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/rounded_corner_fill"
            android:layout_marginBottom="20dp"
            android:id="@+id/nama"
            android:hint="Input Nama"
            android:textSize="12dp"
            android:paddingLeft="8dp"
            />

<!--    Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Masuk"
            android:background="@drawable/rounded_corner_button"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:id="@+id/btnMasuk"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Tidak memiliki asuransi ?"
                android:paddingHorizontal="2dp"
                android:textColor="@color/black"
                />

<!--        Daftar -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Daftarkan sekarang"
                android:paddingHorizontal="2dp"
                android:textColor="@color/black"
                android:id="@+id/daftar"
                />
        </LinearLayout>

<!--    Login Asuransi -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masuk sebagai asuransi"
            android:textSize="12dp"
            android:textStyle=""
            android:gravity="center"
            android:textColor="@color/black"
            android:id="@+id/masukAsuransi"
            />

    </LinearLayout>




</LinearLayout>